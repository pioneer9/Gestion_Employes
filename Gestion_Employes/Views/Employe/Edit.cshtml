@model GestionEmployes.Models.repositories.Employe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employe</h4>
<hr />
<div class="row">
    <div class="col-md-4 container">
        <form asp-action="Edit">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nom</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_embauche" class="control-label">date d'embauche</label>
                <input type="date" asp-for="Date_embauche" class="form-control" />
                <span asp-validation-for="Date_embauche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN" class="control-label"></label>
                <input asp-for="CIN" class="form-control" />
                <span asp-validation-for="CIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexe" class="control-label"></label>
                <select class="form-select mb-3" asp-for="Sexe"  >
                    <option value="Male" selected>Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Sexe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select class="form-select mb-3" asp-for="Type"  >
                    <option value="Chef Chantie" selected>Chef Chantie</option>
                    <option value="Ovrier">Ovrier</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Fonctionnalite</label>
                <select class="form-select mb-3" asp-for="Categorie"  asp-items="@(new SelectList(ViewBag.ListCategories,"Id","Fonctionnalite"))">
                    </select>
                <span asp-validation-for="Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salaire" class="control-label">Salaire</label>
                <input asp-for="salaire" class="form-control" />
                <span asp-validation-for="salaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fILE" class="control-label">Image</label>
                <input type="file" id="example-fileinput" class="form-control" name="file" asp-for="fILE"  />
                <span asp-validation-for="fILE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-info mt-2" asp-action="Index">Reteur</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
