@model IEnumerable<GestionEmployes.Models.repositories.Employe>

@{
    ViewData["Title"] = "Index";
}

<h1>List des employe</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary btn-rounded"><i class="mdi mdi-plus"></i>Ajouter employe</a>
</p>
<table id="basic-datatable" class="table dt-responsive nowrap w-100">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                NOM
            </th>
            <th>
                PRENOM
            </th>
            <th>
                ADRESS
            </th>
            <th>
                TELEPHONE
            </th>
            
            <th>
                CIN
            </th>
            <th>
                GENDER
            </th>
             <th>
                Equipe
            </th>
             <th>
                Fonctionnalite
            </th>
           
            
          
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if(item.Image!=null)
                {
                       <img src="~/uploads/@item.Image" style="width:60px" class="img-thumbnail"/> 
                }               
            </td>
            <td>
              
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Equipe.Nom_equipe)
            </td>
            
             <td>
                @Html.DisplayFor(modelItem => item.Categorie.Fonctionnalite)
            </td>
         
            
            <td class="table-action">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="mdi mdi-square-edit-outline"></i></a> 
                <a asp-action="Details" asp-route-id="@item.Id"><i class="mdi mdi-eye"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
